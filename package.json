{
  "name": "mern_link_shortener",
  "version": "1.0.0",
  "description": "link shortener app",
  "main": "app.js",
  "engines": {
    "node": "18.13.0"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node app.js",
    "start:server": "nodemon app.js",
    "start:client": "npm run start --prefix client",
    "client:install": "npm i --prefix client",
    "client:build": "npm run build --prefix client",
    "start:dev": "cross-env NODE_ENV=development concurrently \"npm run start:server\" \"npm run start:client\" "
  },
  "keywords": [
    "mern",
    "react",
    "node.js",
    "express",
    "mongodb"
  ],
  "author": "Mikhail Pinchuk <mikhail.pinchuk.work@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "config": "^3.3.9",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^6.15.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^6.9.2",
    "shortid": "^2.2.16"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.20"
  }
}
